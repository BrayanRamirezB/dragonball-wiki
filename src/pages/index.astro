---
import Layout from '@/layouts/Layout.astro'
import Hero from '@/sections/Hero.astro'
import Info from '@/sections/Info.astro'
import Promo from '@/sections/PromoMictlan.astro'
import PrincipalFighters from '@/sections/PrincipalFighters.astro'
import Characters from '@/sections/Characters.astro'
import Header from '@/sections/Header.astro'
---

<Layout>
  <Header
    firstAnchorHref='#principal-fighters'
    firstAnchorText='Guerreros Z'
    secondAnchorHref='#characters'
    secondAnchorText='Personajes'
  />
  <main class='max-w-6xl px-2 lg:px-10 mx-auto mt-18 md:mt-14'>
    <Hero />
    <Info />
    <PrincipalFighters />
    <Characters />
    <Promo />
  </main>
</Layout>
