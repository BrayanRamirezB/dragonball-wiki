---
import HeroLogo from '@/components/HeroLogo.astro'
import Star from '../icons/Star.astro'
import PrincipalInfo from '@/sections/PrincipalInfo.astro'
---

<section
  class='flex flex-col items-center justify-center py-24 w-full h-screen'
>
  <div
    class='flex flex-col md:flex-row gap-4 mb-9 px-2 py-1 text-6xl lg:text-7xl cursor-default transition-transform duration-500 ease-in-out hover:scale-110'
  >
    <h1 class='text-center font-extrabold text-gray-200'>
      <span
        class='text-transparent bg-clip-text bg-gradient-to-l from-red-400 to-orange-400'
        >DragonBall
      </span> Wiki
    </h1>
    <h1 class='text-center flex items-center justify-center'>
      <span
        class='absolute shadow-md backdrop-blur-md inline-flex items-center justify-center bg-gradient-to-r from-yellow-400 to-orange-400 size-16 rounded-full animate-[ping_1s_ease-in-out_infinite]'
      >
        <Star class='text-orange-500 size-4' />
      </span>
      <span
        class='relative shadow-md backdrop-blur-md inline-flex items-center justify-center bg-gradient-to-r from-yellow-400 to-orange-400 size-16 rounded-full'
      >
        <Star class='text-orange-500 size-4' />
      </span>
    </h1>
  </div>

  <HeroLogo />

  <PrincipalInfo />
</section>
