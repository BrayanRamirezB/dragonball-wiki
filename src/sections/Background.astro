---
import Balls from '@/components/Balls.astro'
import Planet from '@/sections/Planet.astro'
---

<div
  class='absolute top-0 z-[-2] size-full bg-[#000000] bg-[radial-gradient(#ffffff33_1px,#00091d_1px)] overflow-hidden'
>
  <Planet
    color='bg-gradient-to-br from-neutral-500 via-neutral-100 to-black'
    place='-top-20 -right-30'
    shadow='shadow-[0_0_100px_rgba(250,250,250,0.4)]'
    size='size-86'
  />

  <Planet
    color='bg-gradient-to-br from-green-500 via-blue-600 to-black'
    place='top-20 left-10'
    shadow='shadow-[0_0_100px_rgba(0,255,127,0.6)]'
    size='size-70'
  />

  <Planet
    color='bg-gradient-to-br from-indigo-700 via-purple-700 to-black'
    place='top-1/7 right-0'
    shadow='shadow-[0_0_100px_rgba(160,86,240,0.3)]'
    size='size-90'
  />

  <Planet
    color='bg-gradient-to-br from-green-300 via-yellow-300 to-black'
    place='top-1/4 left-1/4'
    shadow='shadow-[0_0_100px_rgba(255,211,31,0.3)]'
    size='size-40'
  />

  <Planet
    color='bg-gradient-to-br from-green-500 via-emerald-500 to-black'
    place='top-1/2 -left-10'
    shadow='shadow-[0_0_100px_rgba(0,200,0,0.3)]'
    size='size-50'
  />

  <Planet
    color='bg-gradient-to-br from-red-500 via-orange-400 to-black'
    place='top-1/3 right-10'
    shadow='shadow-[0_0_100px_rgba(250,0,0,0.6)]'
    size='size-80'
  />

  <Planet
    color='bg-gradient-to-br from-neutral-500 via-neutral-100 to-black'
    place='top-1/2 left-10'
    shadow='shadow-[0_0_100px_rgba(250,250,250,0.4)]'
    size='size-20'
  />

  <Planet
    color='bg-gradient-to-br from-slate-900 via-slate-700 to-black'
    place='top-4/7 right-0'
    shadow='shadow-[0_0_100px_rgba(50,50,50,0.6)]'
    size='size-40'
  />

  <Planet
    color='bg-gradient-to-br from-rose-700 via-pink-600 to-black'
    place='top-5/7 left-0'
    shadow='shadow-[0_0_100px_rgba(200,0,0,0.3)]'
    size='size-20'
  />

  <Planet
    color='bg-gradient-to-br from-sky-500 via-cyan-500 to-black'
    place='top-3/4 -right-10'
    shadow='shadow-[0_0_100px_rgba(0,0,200,0.3)]'
    size='size-50'
  />

  <Planet
    color='bg-gradient-to-br from-pink-500 via-yellow-500 to-black'
    place='top-6/7 left-1/6'
    shadow='shadow-[0_0_100px_rgba(243,188,33,0.4)]'
    size='size-50'
  />

  <Balls />
</div>
